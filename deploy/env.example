# /etc/yearplan.env
# Environment variables for YearPlan service

# Flask secret
FLASK_SECRET_KEY=change-me

# External link to the app (used in emails)
HOST_LINK=https://yeargoal.6ray.com

# MySQL connection
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3306
MYSQL_DATABASE=yearplan
MYSQL_USER=yearplan
MYSQL_PASSWORD=change-me

# Optional debug flags
YEARPLAN_DEBUG_WEB=0
YEARPLAN_DEBUG_API=0
YEARPLAN_FLASK_DEBUG=0
